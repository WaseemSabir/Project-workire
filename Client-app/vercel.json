{
    "version": 2,
    "public": true,
    "name": "workire-vercel",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ],
    "functions": {
        "api/index.js": {
            "includeFiles": "**",
            "optimize": {
                "exclude": [
                    "node_modules/**"
                ]
            }
        }
    },
    "installCommand": "npm install --legacy-peer-deps",
    "buildCommand": "npm run build:ssr"
}